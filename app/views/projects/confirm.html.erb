<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、作成しますか？</h3>
    <%= form_for(@project) do |f| %>
      <%= f.hidden_field :subject %>
      <%= f.hidden_field :content %>
      <p>教科:<%= @project.subject %></p>
      <p>内容:<%= @project.content %></p>
      <%= f.submit "作成する",class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= form_for(@project, url: new_project_path, method: 'get') do |f| %>
      <%= f.hidden_field :subject %>
      <%= f.hidden_field :content %>
      <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>
