<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="project-text">
      <p class="left"><strong>教科</strong></p>
      <p class="left"><%= @project.subject %></p>
      <p class="left"><strong>プロジェクト</strong></p>
      <p class="left"><%= @project.content %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @project.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p>コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, project: @project } %>
    </div>
    <%= render partial: 'comments/form', locals: { comment: @comment, project: @project } %>
    <% if current_user.id == @project.user_id %>
      <%= link_to '編集', edit_project_path(@project) %> |
    <% end %>
    <%= link_to '戻る', projects_path %>
  </div>
</div>
